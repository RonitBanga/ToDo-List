<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDo List</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script>
      function myFunction() {
        var a = document.getElementById("delete").parentNode.remove();
      }
    </script>

    <style>
      html {
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-size: 300% 300%;
        /* background-image: linear-gradient(
          -45deg,
          rgba(59, 173, 227, 1) 0%,
          rgba(87, 111, 230, 1) 25%,
          rgba(152, 68, 183, 1) 51%,
          rgba(255, 53, 127, 1) 100%
        ); */
        background-image: linear-gradient(
          to right top,
          #d16ba5,
          #c777b9,
          #ba83ca,
          #aa8fd8,
          #9a9ae1,
          #8aa7ec,
          #79b3f4,
          #69bff8,
          #52cffe,
          #41dfff,
          #46eefa,
          #5ffbf1
        );
        animation: AnimateBG 20s ease infinite;
      }

      @keyframes AnimateBG {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      #maindiv{
        background-color: white;
        padding: 50px;
        padding-top: 20px;
        padding-bottom: 20px;
        border-radius: 10px;
      }

      html {
        min-height: 1000px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }

      body {
        overflow-y: hidden;
        overflow-x: hidden;
        padding-bottom: 200px;
      }

      .date {
        max-width: 400px;
        margin: 50px auto;
        background: transparent;
        border-radius: 5px;
      }

      #heading {
        text-align: center;
      }

      #div1 {
        background: transparent;
        max-width: 400px;
        margin: 50px auto;
        border-radius: 10px;
        padding: 20px;
      }

      .btn {
        border-radius: 10px;
        border-color: transparent;
        background-color: rgb(125, 241, 125);
        font-size: 15px;
        border-width: 0;
      }
    </style>
  </head>
  <body>
    <div id="maindiv">
    <div class="date" id="heading">
      <h1><%=day%></h1>
    </div>
    <div id="div1">
      <div>
        <h1>ToDo List</h1>
        <form method="post" action="/add">
          <input
            type="text"
            name="notes"
            class="note"
            placeholder="Add a Task"
            required
            style="margin-bottom: 5px"
          />
          <br />
          <input type="submit" name="add" value="Add" class="Add btn" />
        </form>
      </div>

      <div>
        <div id="task">
          <h1>Task</h1>
          <form method="post" action="/delete">
            <div class="del">
              <input
                type="text"
                name="notes"
                class="noteUpdate"
                placeholder="Update Task"
              />
              <ul>
                <% name.forEach(function(i){ %>
                <li class="list" type="none">
                  <input
                    type="radio"
                    name="checkbox"
                    value="<%=i.id%>"
                    class="hello"
                  /><label for="<%=i.id%>"><%=i.task%></label>
                </li>
                <% }) %>
              </ul>
            </div>
            <button class="delt btn">Update</button>
            <input type="submit" value="Delete" class="delt1 btn" />
          </form>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
